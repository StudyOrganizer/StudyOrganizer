<form method="POST">
    <input type="text" value="{{ translate("Enter name here") }}" name="name" style="width: 100%;"/>
    <table class="table table-bordered">
        <tr>
            <th>
                {{ translate("Time") }}
            </th>
            <th>
                {{ translate("Monday") }}
            </th>
            <th>
                {{ translate("Tuesday") }}
            </th>
            <th>
                {{ translate("Wednesday") }}
            </th>
            <th>
                {{ translate("Thursday") }}
            </th>
            <th>
                {{ translate("Friday") }}
            </th>
            <th>
                {{ translate("Saturday") }}
            </th>
        </tr>
        {% for time in times %}
            <tr>
                <td>
                    {{ time.getName() }} <br />
                    {{ time.getStart() | date("h:i") }} - {{ time.getEnd() | date("h:i") }}
                </td>
                <td>
                    <select id="subject_chooser{{ time.getID() }}monday" name="monday{{ time.getID() }}">
                        {% for subject in subjects %}
                        <option value="{{ subject.getID() }}">{{ subject.getName() }}</option>
                        {% endfor %}
                    </select>
                </td>
                <td>
                    <select id="subject_chooser{{ time.getID() }}tuesday" name="tuesday{{ time.getID() }}">
                        {% for subject in subjects %}
                        <option value="{{ subject.getID() }}">{{ subject.getName() }}</option>
                        {% endfor %}
                    </select>
                </td>
                <td>
                    <select id="subject_chooser{{ time.getID() }}wednesday" name="wednesday{{ time.getID() }}">
                        {% for subject in subjects %}
                        <option value="{{ subject.getID() }}">{{ subject.getName() }}</option>
                        {% endfor %}
                    </select>
                </td>
                <td>
                    <select id="subject_chooser{{ time.getID() }}thursday" name="thursday{{ time.getID() }}">
                        {% for subject in subjects %}
                        <option value="{{ subject.getID() }}">{{ subject.getName() }}</option>
                        {% endfor %}
                    </select>
                </td>
                <td>
                    <select id="subject_chooser{{ time.getID() }}friday" name="friday{{ time.getID() }}">
                        {% for subject in subjects %}
                        <option value="{{ subject.getID() }}">{{ subject.getName() }}</option>
                        {% endfor %}
                    </select>
                </td>
                <td>
                    <select id="subject_chooser{{ time.getID() }}saturday" name="saturday{{ time.getID() }}">
                        {% for subject in subjects %}
                        <option value="{{ subject.getID() }}">{{ subject.getName() }}</option>
                        {% endfor %}
                    </select>
                </td>
            </tr>
        {% endfor %}
    </table>
    <input type="submit" class="btn btn-default"/>
</form>

<script>
    {% for time in times %}
    $(document).ready(function() {
        $('#subject_chooser{{ time.getID() }}monday').multiselect({
            nonSelectedText: '{{ translate("Choose Subject for ") }} {{ time.getName() }}' ,
            buttonWidth: '100%'
        });
    });
    $(document).ready(function() {
        $('#subject_chooser{{ time.getID() }}tuesday').multiselect({
            nonSelectedText: '{{ translate("Choose Subject for ") }} {{ time.getName() }}' ,
            buttonWidth: '100%'
        });
    });
    $(document).ready(function() {
        $('#subject_chooser{{ time.getID() }}thursday').multiselect({
            nonSelectedText: '{{ translate("Choose Subject for ") }} {{ time.getName() }}' ,
            buttonWidth: '100%'
        });
    });
    $(document).ready(function() {
        $('#subject_chooser{{ time.getID() }}friday').multiselect({
            nonSelectedText: '{{ translate("Choose Subject for ") }} {{ time.getName() }}' ,
            buttonWidth: '100%'
        });
    });
    $(document).ready(function() {
        $('#subject_chooser{{ time.getID() }}saturday').multiselect({
            nonSelectedText: '{{ translate("Choose Subject for ") }} {{ time.getName() }}' ,
            buttonWidth: '100%'
        });
    });
    $(document).ready(function() {
        $('#subject_chooser{{ time.getID() }}wednesday').multiselect({
            nonSelectedText: '{{ translate("Choose Subject for ") }} {{ time.getName() }}' ,
            buttonWidth: '100%'
        });
    });
    {% endfor %}
</script>