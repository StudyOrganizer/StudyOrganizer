{{ headScript().appendFile(basePath('/js/third-party/toggle.min.js','text/javascript'))|raw }}
{{ headLink().appendStylesheet(basePath('/css/third-party/toggle.min.css'))|raw }}


<ol class="breadcrumb" xmlns="http://www.w3.org/1999/html">
    <li><a href="{{ url("studentui_dashboard") }}">{{ translate("Dashboard") }}</a></li>
    <li class="active"><a href="{{ url("studentui_documents") }}">{{ translate("Documents") }}</a></li>
    <li class="active"><a href="{{ url("studentui_document_text_view",{"id":document.getId()}) }}">{{ translate("View") }} {{ document.getTitle() }}</a></li>
    <li class="active"><a href="{{ url("studentui_document_share",{"id":document.getId()}) }}">{{ translate("Share") }} {{ document.getTitle() }}</a></li>
</ol>
<form method="post">
    <table class="table table-bordered">
        <tr>
            <th>{{ translate("Description") }}</th>
            <th>{{ translate("Option") }}</th>
        </tr>
        <tr>
            <td>
                {{ translate("Document") }}
            </td>
            <td>
                {% if state %}
                <input type="checkbox" name="public" checked>
                {% else %}
                <input type="checkbox" name="public">
                {% endif %}
            </td>
        </tr>
    </table>
    <div class="pull-left">
        <a class="btn btn-default" href="{{ url("studentui_documents") }}">{{ translate("Cancel") }}</a>
    </div>
    <div class="pull-right">
        <input type="submit" class="btn btn-default" value="{{ translate("Safe") }}" />
    </div>
    <br />
</form>



<script>
    $("[name='public']").bootstrapSwitch(
            {
                "onText" : "{{ translate("public") }}",
                "offText" : "{{ translate("private") }}",
            }
    );
</script>